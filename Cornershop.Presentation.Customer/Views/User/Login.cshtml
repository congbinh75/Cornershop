@{
    ViewData["Title"] = "Login";
}

<div class="border login__container">
    <form asp-controller="User" asp-action="SubmitLogin" method="post">
        <h3 class="mb-3">Log in</h3>
        <div>
            <label>Email or Username</label>
            <input type="text" />
        </div>
        <div>
            <label>Password</label>
            <input type="password" />
        </div>
        <div>
            <input type="submit" class="site-btn text-white" value="Submit" />
        </div>
    </form>
</div>
