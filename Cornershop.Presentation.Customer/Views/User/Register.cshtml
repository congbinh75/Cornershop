@model Cornershop.Shared.DTOs.UserDTO;
@{
    ViewData["Title"] = "Register";
}

<div class="border login__container">
    <form asp-controller="User" asp-action="Register" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.AntiForgeryToken()
        <h3 class="mb-3">Register</h3>
        <div>
            <label>First nane</label>
            FirstName: <input asp-for="FirstName" type="text" 
            data-val-required="Please enter first name" />
        </div>
        <div>
            <label>Last name</label>
            LastName: <input asp-for="LastName" type="text" 
            data-val-required="Please enter last name" />
        </div>
        <div>
            <label>Email</label>
            Email: <input asp-for="Email" type="email" 
            data-val-email="Email is not valid"
            data-val-required="Please enter email" />
        </div>
        <div>
            <label>Username</label>
            Username: <input asp-for="Username" type="text" 
            data-val-required="Please enter username" />
        </div>
        <div>
            <label>Password</label>
            Password: <input asp-for="Password" type="text" 
            data-val-required="Please enter password" />
        </div>
        <div>
            <label>Confirm password</label>
            <input id="confirmPassword" type="password" />
        </div>
        <div>
            <input type="submit" class="site-btn text-white" value="Submit" />
        </div>
    </form>
</div>
