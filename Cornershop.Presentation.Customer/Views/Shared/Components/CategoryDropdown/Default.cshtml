@model ICollection<Cornershop.Shared.DTOs.CategoryDTO>

<div class="hero__categories">
    <div class="hero__categories__all">
        <i class="fa fa-bars"></i>
        <span>All categories</span>
    </div>
    <ul>
        @{
            foreach (var category in Model)
            {
                <li> <a asp-controller="Product" asp-route-categoryId="@category.Id">
                        @category.Name
                    </a></li>
            }
        }
    </ul>
</div>