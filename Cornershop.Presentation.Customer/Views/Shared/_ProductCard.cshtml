@model Cornershop.Shared.DTOs.ProductDTO

<div class="col mb-4">
    <div class="product__discount__item">
        <a href="#">
            <div class="product__discount__item__pic">
                @{
                    var percentage = Math.Floor(@Model.Price / @Model.OriginalPrice * 100);
                    <div class="product__discount__percent">-@percentage%</div>
                }
                <img src="@Model.ProductImages.FirstOrDefault(x => x.IsMainImage = true)" />
            </div>
        </a>
        <div class="product__discount__item__text">
            <h5><a href="#">@Model.Name</a></h5>
            <div class="product__item__price">@Model.Price
                <span>@Model.OriginalPrice</span>
            </div>
        </div>
    </div>
</div>