@model Cornershop.Shared.DTOs.ProductDTO

<div class="col mb-4">
    <div class="product__discount__item">
        <a asp-controller="Product" asp-action="Detail" asp-route-id="@Model.Id">
            <div class="product__discount__item__pic">
                @{
                    var percentage = Math.Floor(100 - (@Model.Price / @Model.OriginalPrice * 100));
                    <div class="product__discount__percent">-@percentage%</div>
                }
                <img src="@Model.ProductImages.FirstOrDefault(x => x.IsMainImage == true)?.ImageUrl" />
            </div>
        </a>
        <div class="product__discount__item__text">
            <h5><a asp-controller="Product" asp-action="Detail" asp-route-id="@Model.Id">@Model.Name</a></h5>
            <div class="product__item__price">@string.Format("{0:C}", @Model.Price)
                <span>@string.Format("{0:C}", @Model.OriginalPrice)</span>
            </div>
        </div>
    </div>
</div>