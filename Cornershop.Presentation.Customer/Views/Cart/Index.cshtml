@model Cornershop.Shared.DTOs.CartDTO

@{
    ViewData["Title"] = "Cart";
}

<div class="container">
    <!-- Shoping Cart Section Begin -->
    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="shoping__product">Products</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cartDetail in Model.CartDetails)
                                {
                                    <tr>
                                        <td class="shoping__cart__item">
                                            <img src="@cartDetail.Product.ProductImages.FirstOrDefault(x => x.IsMainImage == true)?.ImageUrl" alt="" style="width: 10rem;">
                                            <h5>@cartDetail.Product.Name</h5>
                                        </td>
                                        <td class="shoping__cart__price">
                                            @string.Format("{0:C}", cartDetail.Product.Price)
                                        </td>
                                        <td class="shoping__cart__quantity">
                                            <div class="quantity">
                                                <div class="pro-qty">
                                                    <input id="quantity" type="text" value="@cartDetail.Quantity">
                                                </div>
                                            </div>
                                        </td>
                                        <td class="shoping__cart__total">
                                            @(string.Format("{0:C}", @cartDetail.Product.Price * @cartDetail.Quantity))
                                        </td>
                                        <td class="shoping__cart__item__close">
                                            <span class="icon_close"></span>
                                        </td>
                                    </tr>
                                }
