    <!-- Product Details Section Begin -->
    <section class="mt-5 mb-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__pic">
                        <div class="product__details__pic__item">
                            <img class="product__details__pic__item--large"
                                src="@Model.ProductImages.FirstOrDefault(x => x.IsMainImage == true)?.ImageUrl" alt="">
                        </div>
                        <div class="product__details__pic__slider owl-carousel">
                            @{
                                foreach (var image in Model.ProductImages)
                                {
                                    <img data-imgbigurl="@image.ImageUrl" src="@image.ImageUrl" alt="">
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__text">
                        <h3>@Model.Name</h3>
                        <div class="product__details__rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-half-o"></i>
                        </div>
                        <div class="product__details__price">@string.Format("{0:C}", @Model.Price)</div>
                        <div class="product__details__original__price">@string.Format("{0:C}", @Model.OriginalPrice)
                        </div>
                        <div class="product__details__quantity">
                            <div class="quantity">
                                <div class="pro-qty">
                                    <input type="text" value="1">
                                </div>
                            </div>
                        </div>
                        <a href="#" class="primary-btn">ADD TO CARD</a>
                        <ul>
                            <li><b>Availability</b> <span>@(Model.Stock > 0 ? "In stock" : "Out of stock")</span></li>
                            <li><b>Author</b> <span>@Model.Author.Name</span></li>
                            <li><b>Publisher</b> <span>@Model.Publisher.Name</span></li>
                            <li><b>Dimensions</b> <span>@(Model.Width + " x " + Model.Length + " x " + Model.Height + " mm")</span></li>
                            <li><b>Pages</b> <span>@Model.Pages</span></li>
                            <li><b>Published year</b> <span>@Model.PublishedYear</span></li>
                            <li><b>Format</b> <span>@(Model.Format == 0 ? "Paperback" : Model.Format == 1 ? "Hardcover" : "Massmarket")</span></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="product__details__tab">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                               <a class="nav-link active"
                                    aria-selected="true">Description</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div>
                                <div class="product__details__tab__desc">
                                    @Model.Description
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="product__details__tab">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a class="nav-link active"
                                    aria-selected="true">Reviews</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div>
                                <div class="d-flex product__details__tab__desc">
                                    <div class="d-flex flex-column justify-content-between align-items-center">
                                        <div class="d-flex m-3 product__details__rating">
                                            <div id="star1" role="button"><i class="fa fa-star-o"></i></div>
                                            <div id="star2" role="button"><i class="fa fa-star-o"></i></div>
                                            <div id="star3" role="button"><i class="fa fa-star-o"></i></div>
                                            <div id="star4" role="button"><i class="fa fa-star-o"></i></div>
                                            <div id="star5" role="button"><i class="fa fa-star-o"></i></div>   
                                        </div>
                                        <form id="reviewForm" class="mb-3">
                                            <input class="d-none" type="number" id="rating" required/>
                                            <input class="site-btn" type="submit" value="Submit" />
                                        </form>
                                    </div>
                                    <textarea rows="3" class="w-100 p-2" form="reviewForm" required></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
